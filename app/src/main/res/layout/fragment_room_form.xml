<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="20dp">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text=" OwnerName"
                android:textColor="@color/mainColor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/baseline_person"/>

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:textColor="@color/black"
                android:textColorHint="@color/mainColor"
                android:background="@drawable/round"
                android:hint="Enter your name here"
                android:inputType="text"
                android:padding="16dp"
                tools:ignore="TextFields" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text=" Address"
                android:textSize="20sp"
                android:textColor="@color/mainColor"
                android:drawableLeft="@drawable/baseline_add_location_24"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:hint="Enter your address here"
                android:inputType="text"
                android:padding="16dp"
                tools:ignore="TextFields"
                android:textColor="@color/black"
                android:textColorHint="@color/mainColor"
                android:background="@drawable/round"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Mobile Number"
                android:drawableLeft="@drawable/baseline_call_24"
                android:textSize="20sp"
                android:textColor="@color/mainColor"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/mobNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter your mobile here"
                android:inputType="number"
                android:padding="16dp"
                tools:ignore="TextFields"
                android:textColor="@color/black"
                android:textColorHint="@color/mainColor"
                android:background="@drawable/round"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Room"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/mainColor"
                android:drawableLeft="@drawable/baseline_bedroom_child_24"/>

            <EditText
                android:id="@+id/roomavai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter your room name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/mainColor"
                android:background="@drawable/round"
                android:padding="16dp"
                tools:ignore="TextFields"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/mainColor"
                android:text="Room Member"
                android:textSize="20sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_groups_24"/>

            <EditText
                android:id="@+id/room_mem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of room members"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/mainColor"
                android:background="@drawable/round"
                android:padding="16dp"
                tools:ignore="TextFields"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="20sp"
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_attach_money_24"/>

            <EditText
                android:id="@+id/Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:hint="Enter price for one month"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/mainColor"
                android:background="@drawable/round"
                android:inputType="text"
                android:padding="16dp"
                tools:ignore="TextFields"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Category"
                android:textSize="20sp"
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_category_24"/>


            <RadioGroup
                android:id="@+id/rg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/bed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bed"
                    android:textColor="@color/mainColor"
                    android:textSize="18sp"/>

                <RadioButton
                    android:id="@+id/non_bed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-Bed"
                    android:textColor="@color/mainColor"
                    android:textSize="18sp"/>
            </RadioGroup>

            <ImageView
                android:id="@+id/imgGallery"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/imgbtn"
                android:onClick="imgDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
                android:text="Click to add image"
                android:backgroundTint="@color/secondColor"/>

            <Button
                android:id="@+id/room_sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit your information"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/secondColor"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
